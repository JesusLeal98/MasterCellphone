<% include _header %>

<style>
body{
    background: url(https://iphoneroscdn-iphoneros.netdna-ssl.com/wp-content/uploads/2017/07/iMacPro_iPhoneros_escritorio.jpg);
}
html,body{
    background-repeat:no-repeat; 
    background-position:center;
    position: relative;
    width:100%;
    height:100%;
    background-size:100% 100%;
}
</style>

<h1 style="color: white;">Actualiza tu perfil</h1>
<form action="/edit" method="post">
    <div class="form-group">
        <input name="displayName" type="text" class="form-control"
        placeholder="Nombre para mostrar"
        value="<%= currentUsuario.displayName || "" %>"/>
    </div>
    <div class="form-group">
        <textarea name="bio" class="form-control" type="text"
        placeholder="Escribenos sobre algun celular que deseas que aparezca">
            <%= currentUsuario.bio || "" %>
        </textarea>
    </div>
    <input type="submit" value="Actualizar" class="btn btn-danger btn-block"/>
</form>

<% include _footer %>